<div class="nav d-flex flex-row bg-light p-2 ps-3 pe-3">
    {{!-- add href later --}}
    <a class="bucket p-1 rounded text-dark" href="#">BUCKET</a>
    {{!-- add href later --}}
    <a class="logout text-dark ms-auto" href="#">LOGOUT</a>
</div>
<div class="d-flex flex-row">
    <div class="aside bg-light p-4 vh-100">
        {{#if logged_in}}
        <h5><u>DROPS:</u></h5>
        <ol>
            {{!-- {{#if user.todos.length}} --}}
            {{#each user.todos as |todo|}}
            {{!-- ; getNewSplashBtnFn('{{todo.title}}'; removeDropBtnFn('{{id}}')createNewSplashBtnFn('{{todo.title}}', '{{user.id}}'); --}}
            <a href="" class="makeSplash text-dark" onclick="toggleFn('{{todo.title}}'); return false;">
                <li>{{todo.title}}</li>
            </a>
            {{/each}}
            {{!-- {{/if}} --}}
        </ol>
        <h5 class="pt-5"><u>SPLASHES:</u></h5>
        <ol>
            {{#each user.dones as |done|}}
            <a href="">
                <li style="text-decoration:line-through">{{done.title}}</li>
            </a>
            {{/each}}
        </ol>
        {{/if}}
    </div>
    <div class="section bg-light p-3 vh-100">

        <div id="newDrop_form" class="new flex-row m-10 p-3 h-15 rounded">
            <input type="text" class="form-control mt-10 me-3" placeholder="Add to your Bucket" aria-label="Add to your Bucket">
            <button class="drop bg-dark rounded text-light">DROP</button>
        </div>

        <div id="newSplash_form" class="new flex-column m-10 p-3 rounded">
            <h5><u>What do you want to add to your  SPLASHED DROP?</u></h5><br>
            <p id="title">
                Tell us about your SPLASH adventure:
            </p>
            <textarea id="content"></textarea>
            <button class="splash join ms-auto bg-dark text-light m-15">
                <h3>SPLASH</h3>
            </button>
        </div>

    </div>
</div>
<script src="/js/bucket.js"></script>

